{
  "name": "application-name",
  "description": "description",
  "version": "0.0.1",
  "license": "MIT",
  "author": {
    "name": "Your Name",
    "email": "yourname@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/youruser/yourrepository.git"
  },
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "precommit": "npm run script:issues",
    "commit": "cz",

    "prebuild": "rimraf ./dist",
    "build:check": "tsc --noEmit",
    "build": "tsc && vite build",
    "start": "vite preview",
    "dev": "vite",

    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watchAll",
    "test:staged": "jest --passWithNoTests --findRelatedTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "script:gitmoji": "ts-node ./scripts/gitmoji-setup.ts",
    "script:issues": "ts-node ./scripts/github-issues.ts"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",

    "commitizen": "^4.3.0",
    "commitizen-emoji": "^1.0.5",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",

    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",

    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",

    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",

    "@vitejs/plugin-react": "^2.2.0",
    "vite": "^3.2.3",

    "husky": "^8.0.3",
    "rimraf": "^4.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
