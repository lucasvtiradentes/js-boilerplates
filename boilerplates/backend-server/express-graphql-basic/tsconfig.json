{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types/",
      "src/types"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
